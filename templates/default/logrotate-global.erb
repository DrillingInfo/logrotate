# Generated by Chef for <%= node['fqdn'] -%>

<% @directives.each do |d| -%>
<%= d %>
<% end -%>

<% @values.each do |k, v| -%>
<%= k %> <%= v %>
<% end -%>

include /etc/logrotate.d

<% @paths.each do |path, config| -%>
<%= path %> {
    <% config['directives'].each do |d|-%>
    <%= d %>
    <% end -%>
    <% config['values'].each do | k, v | -%>
    <%= k %> <%= v %>
    <% end -%>
    <% config['scripts'].each do | scripttype, body | -%>
    <%= scripttype %>
    <%= body %>
    endscript
    <% end -%>
}

<% end -%>
